{
	"$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
	"files": {
		"includes": ["**/*.ts", "**/*.tsx", "!**/routeTree.gen.ts", "!examples"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"assist": {
		"actions": {
			"recommended": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
