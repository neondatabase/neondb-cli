{
	"name": "neondb-cli",
	"private": true,
	"scripts": {
		"bump": "changeset",
		"build:cli": "pnpm --filter get-db build",
		"build:plugin": "pnpm --filter vite-plugin-db build",
		"build": "pnpm --recursive --filter='./packages/**' build",
		"format": "biome check --error-on-warnings --write",
		"lint:ci": "biome ci --error-on-warnings",
		"test:ci": "pnpm --recursive test:ci",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@changesets/cli": "^2.29.7",
		"console-fail-test": "0.5.0",
		"husky": "9.1.7",
		"lint-staged": "15.5.0",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.4.0",
	"engines": {
		"node": ">=18.3.0"
	}
}
